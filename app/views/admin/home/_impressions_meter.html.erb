          }" data-hs-unfold-target="#reportsOverviewDropdown1" data-hs-unfold-invoker="">
        <i class="tio-more-vertical"></i>
      </a>

      <div id="reportsOverviewDropdown1" class="hs-unfold-content dropdown-unfold dropdown-menu dropdown-menu-right mt-1 hs-unfold-hidden hs-unfold-content-initialized hs-unfold-css-animation animated" data-hs-target-height="243" data-hs-unfold-content="" data-hs-unfold-content-animation-in="slideInUp" data-hs-unfold-content-animation-out="fadeOut" style="animation-duration: 300ms;">
        <span class="dropdown-header">Settings</span>

        <a class="dropdown-item" href="#">
          <i class="tio-share dropdown-item-icon"></i> Share reports
        </a>
        <a class="dropdown-item" href="#">
          <i class="tio-download-to dropdown-item-icon"></i> Download
        </a>
        <a class="dropdown-item" href="#">
          <i class="tio-alt dropdown-item-icon"></i> Connect other apps
        </a>

        <div class="dropdown-divider"></div>

        <span class="dropdown-header">Feedback</span>

        <a class="dropdown-item" href="#">
          <i class="tio-chat-outlined dropdown-item-icon"></i> Report
        </a>
      </div>
    </div>
     End Unfold -->
  </div>
  <!-- End Header -->

  <!-- Body -->
  <div class="card-body text-center">
    <!-- Badge -->
    <div class="h3">
      <% if push_interaction[:push_limit] > 0 %>
        <span class="badge badge-soft-info badge-pill">
          <i class="tio-checkmark-circle"></i> Tudo certo
        </span>
      <% else %>
        <span class="badge badge-soft-danger badge-pill">
          <i class="tio-clear-circle"></i> Você não possui mais impressões disponíveis
        </span>
      <% end%>
    </div>
    <!-- End Badge -->

    <!-- Chart Half -->
    <div class="chartjs-doughnut-custom" style="height: 12rem;">
      <canvas class="js-chartjs-doughnut-half"
              data-hs-chartjs-options='{
              "type": "doughnut",
              "data": {
                "labels": ["Impressões consumidas", "Impressões Disponiveis"],
                "datasets": [{
                  "data": [<%= push_interaction[:push_count] %>, <%= push_interaction[:push_limit] %>],
                  "backgroundColor": ["#377dff", "rgba(55, 125, 255, 0.35)"],
                  "borderWidth": 4,
                  "hoverBorderColor": "#ffffff"
                }]
              }
            }'></canvas>

      <div class="chartjs-doughnut-custom-stat">
        <small class="text-cap">Impressões Disponiveis</small>
        <span class="h1"><%= push_interaction[:push_limit] %></span>
      </div>
    </div>
    <!-- End Chart Half -->

    <hr>

    <div class="row">
      <div class="col text-right">
        <span class="d-block h4 mb-0"><%= current_shop.campaigns.last_month.sum(:clicks) %></span>
        <span class="d-block">Cliques</span>
      </div>

      <div class="col column-divider text-left">
        <% if campaigns_this_week_ctr > campaigns_last_week_ctr %>
          <span class="d-block h4 text-success mb-0">
            <i class="tio-trending-up"></i> <%= campaigns_this_week_ctr %>%
          </span>
        <% else %>
          <span class="d-block h4 text-danger mb-0">
            <i class="tio-trending-down"></i> <%= campaigns_this_week_ctr %>%
          </span>
        <% end %>
        <span class="d-block">CTR</span>
      </div>
    </div>
    <!-- End Row -->
  </div>
  <!-- End Body -->
</div>
<!-- End Card -->
