<%= form_with model: @campaign, url: url, method: method do |f| %>
  <div class="form-group">
    <%= label_tag 'campaign_name', 'Campaign Name:' %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag 'campaign_tag', 'Tag:' %>
    <%= f.text_field :tag, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag 'campaign_title', 'Push Title:' %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag 'campaign_body', 'Push Body:' %>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag 'campaign_url', 'Destination URL:' %>
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon1"><%= @shop.domain %>/</span>
      <%= f.text_field :url, class: "form-control" %>
    </div>
  </div>
  <!-- <div class="form-group"> -->
    <!--<%= label_tag 'campaign_release_date', 'Release Date:' %>-->
    <%= f.hidden_field :release_date, value: Time.now, class: "form-control" %>
  <!--</div>-->
  <%= f.submit "Send Now", class: "btn btn-purple float-right px-4" %>
<% end %>
