<div class="row py-3">
  <div class="col-6 my-auto">
    <h2><%= t('admin_commons.your_campaigns') %></h2>
  </div>

  <div class="col-6 my-auto">
    <a class="btn btn-purple text-center btn-lg float-right" href="<%= new_admin_campaign_path %>" role="button">+ <%= t('admin_commons.new_campaign') %></a>
  </div>
</div>
<div class="row">
  <table class="table campaigns">
    <tbody>
      <%@campaigns.each_with_index do |campaign, i| %>
        <tr>
          <td> 
            <div> <%= campaign.name %> </div>
            <div class="sub-label"> 
              <%= t('targter.all_subscribers')%> | <%= distance_of_time_in_words(Time.now, campaign.release_date) %> | Campaign ID: <%= campaign.id %>
            </div>
          </td>
          <td>
            <div class="disabled"> $ (Em Breve) </div>
            <div class="sub-label"> <%= t('admin_commons.revenue')%> </div>
          </td>
          <td data-toggle="tooltip" data-placement="bottom" title="<%= t('tooltip.campaign.impressions')%>">
            <div> <%= campaign.impressions %> </div>
            <div class="sub-label"> <%= t('admin_commons.impressions')%> </div>
          </td>
          <td data-toggle="tooltip" data-placement="bottom" title="<%= t('tooltip.campaign.clicks')%>" > 
            <div> <%= campaign.clicks %> </div>
            <div class="sub-label"> <%= t('admin_commons.clicks')%> </div>
          </td>
          <td class="align-middle">
            <a class="btn btn-red" href="<%= edit_admin_campaign_path(campaign) %>" role="button"> <%= t('admin_commons.edit')%> </a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>