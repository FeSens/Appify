<div class="row">
  <div class="col-9 mx-auto mt-5 mb-5 white shadow-sm p-4 text-center">
    <h1>Bem vindo ao Aplicatify.</h1><br>
    <h3>Configure a aparencia do seu app</h3>
  </div>
</div>

<div class="row">
  <div class="col-9 mx-auto mb-5 white shadow-sm p-4">
    <h4 class="pb-4">Settings</h4>
    <%= form_for @manifest, url: manifest_form_path(@manifest), method: "patch" do |f| %>
      <div class="form-group">
        <%= label_tag 'manifest_name', 'Nome:' %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag 'manifest_short_name', 'Nome Curto:' %>
        <%= f.text_field :short_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag 'manifest_icon', 'Icone:' %>
        <%= f.file_field :icon, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag 'manifest_theme_color', 'Cor Principal:' %>
        <%= f.text_field :theme_color, class: "form-control jscolor" %>
      </div>
      <div class="form-group">
        <%= label_tag 'manifest_background_color', 'Cor de Fundo:' %>
        <%= f.text_field :background_color, class: "form-control jscolor" %>
      </div>
      <div class="form-group">
        <%= label_tag 'manifest_description', 'Descrição:' %>
        <%= f.text_area :description, class: "form-control" %>
      </div>
      <%= f.submit "Salvar", class: "btn btn-primary float-right px-4" %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-9 mx-auto mb-5 p white shadow-sm p-4">
    <h4 class="pb-4">Gatilhos de Instalação</h4>
    <%= form_for @configuration, url: configuration_form_path(@configuration), method: "patch" do |f| %>
      <div class="form-group">
        <%= label_tag 'configuration_enable_timer', 'Habilitar Timer:' %>
        <%= f.check_box :enable_timer, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag 'configuration_timer', 'Tempo (milissegundos):' %>
        <%= f.number_field :timer, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag 'configuration_modal_text', 'Texto do Popup' %>
        <%= f.text_area :modal_text, class: "form-control" %>
      </div>
      <%= f.submit "Salvar", class: "btn btn-primary float-right px-4" %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-9 mx-auto mb-5 p white shadow-sm p-4">
    <h4 class="pb-4">Notificaçōes Push</h4>
    <%= form_for :push, url: send_push_path do |f| %>
      <div class="form-group">
        <%= label_tag 'push_title', 'Título' %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag 'push_body', 'Mensagem' %>
        <%= f.text_field :body, class: "form-control" %>
      </div>
      <%= f.submit "Enviar push para toda base", class: "btn btn-primary float-right px-4" %>
    <% end  %>
  </div>
</div>

<% if false %>
  <div class="row">
    <div class="col-9 mx-auto mb-5 p white shadow-sm p-4 text-center">
      <h4 class="pb-4">Downloads</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-9 mx-auto mb-5 p white shadow-sm p-4 text-center">
      <h4 class="pb-4">Aparencia No Site</h4>
    </div>
  </div>
<% end %>