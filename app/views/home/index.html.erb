<div class="sidebar">
  <div class="row">
    <div class="col-12 text-center mt-4">
      <%= image_tag "Logo.svg", class:"logo mx-auto" %>
    </div>
  </div>
  <div class="row">
    <div class="col-12 text-center mt-5">
      <a class="btn btn-purple text-center" href="#" role="button">+ Nova Campanha</a>
    </div>
    <div class="col-12 text-center mt-4">
      <a class="btn btn-red" href="#" role="button">Home</a>
    </div>
    <div class="col-12 text-center mt-4">
      <a class="btn btn-red" href="#" role="button">Campanhas</a>
    </div>
    <div class="col-12 text-center mt-4">
      <a class="btn btn-red" href="#" role="button">Subscribers</a>
    </div>
    <div class="col-12 text-center mt-4">
      <a class="btn btn-red" href="#" role="button">Opt Ins</a>
    </div>
  </div>
</div>
<div class="wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="row">
          <nav class="navbar navbar-expand-lg w-100">
            <span class="greetings" >Olá,</span>
            <span class="name ml-3" >Nome</span>
          </nav>
        </div>
        <div class="row mt-3 mb-3">
          <div class="col-md-6 col-xl-3  mx-auto info-card">
            <%= image_tag "Componente 1 – 1.svg" %>
            <div class="title">Subscribers</div>
            <div class="value"> <%= @push_subscribers %> </div>
          </div>
          <div class="col-md-6 col-xl-3  mx-auto info-card">
            <%= image_tag "Componente 2 – 1.svg" %>
            <div class="title">Subscribers</div>
            <div class="value">2,200</div>
          </div>
          <div class="col-md-6 col-xl-3  mx-auto info-card">
            <%= image_tag "Componente 3 – 1.svg" %>
            <div class="title">Subscribers</div>
            <div class="value">2,200</div>
          </div>
          <div class="col-md-6 col-xl-3  mx-auto info-card">
            <%= image_tag "Componente 4 – 1.svg" %>
            <div class="title">Subscribers</div>
            <div class="value">2,200</div>
          </div>
        </div>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-8">
        <h4 class="pb-4">Assinantes Push</h4>
        <canvas id="push-subscribers" width="200" height="100"></canvas>
      </div>
      <div class="col-4">
        <div class="row interactions-container float-right py-4">
          <div class="col-6 my-auto">
            <div class="row">
              <div class="col-12 mb-4">
                <span class="title">Impressions <br> Consumed</span>
              </div>
              <div class="col-12 mb-3">
                <span class="consumed mr-3"> <%= @push_interaction[:push_count] %> </span>
                <span class="available">|</span>
                <span class="available"> <%= @push_interaction[:push_limit] %> </span>
              </div>
              <div class="col-12">
                <div class="progress">
                  <div class="progress-bar" role="progressbar" style="width: <%=  100 * @push_interaction[:push_count].to_f / @push_interaction[:push_limit].to_f %>%" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-6 my-auto">
            <%= image_tag "Componente 5 – 1.svg" %>
          </div>
        </div>
        <div class="row latest-campaigns float-right mt-4 py-4">
          <div class="col-6 my-auto">
            <div class="row">
              <div class="col-12 mb-4">
                <span class="title">Impressions <br> Consumed</span>
              </div>
              <div class="col-12 mb-3">
                <span class="consumed mr-3"> <%= @push_interaction[:push_count] %> </span>
                <span class="available">|</span>
                <span class="available"> <%= @push_interaction[:push_limit] %> </span>
              </div>
              <div class="col-12">
                <div class="progress">
                  <div class="progress-bar" role="progressbar" style= "<%=  100 * @push_interaction[:push_count].to_f / @push_interaction[:push_limit].to_f %>%" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-6 my-auto">
            <%= image_tag "Componente 5 – 1.svg" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
