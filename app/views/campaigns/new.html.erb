<div class="row">
  <div class="col-9 mx-auto mb-5 white shadow-sm p-4">
    <h4 class="pb-4">Settings</h4>
    <%= form_for @campaign, url: campaigns_path(@campaign), method: "create" do |f| %>
      <div class="form-group">
        <%= label_tag 'campaign_name', 'Nome:' %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag 'campaign_tag', 'Tag:' %>
        <%= f.text_field :tag, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag 'campaign_title', 'Titulo:' %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag 'campaign_body', 'Texto:' %>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag 'campaign_url', 'Url de Destino:' %>
        <%= f.text_field :url, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag 'campaign_release_date', 'Release Date:' %>
        Current Time: <%= Time.now %>
        <%= f.datetime_field :release_date,  class: "form-control" %>
      </div>
      <%= f.submit "Salvar", class: "btn btn-purple float-right px-4" %>
    <% end %>
  </div>
</div>