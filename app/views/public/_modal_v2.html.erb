<style>
  .aplicatify-modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 30%;
  min-width: 310px;
  max-width: 500px;
  max-height: 360px;
  margin:0 auto;
  padding:33px 17px;
  font-family:'Roboto', sans-serif;
  font-size:13px;
  line-height:17px;
  color:#333;
  word-wrap:break-word;
  background-color:white;
  border-radius:9px;
  box-shadow: 0px 1px 2px rgba(0,0,0,0.02),
              0px 2px 7px rgba(0,0,0,0.03),
              0px 13px 53px rgba(0,0,0,0.05),
              0px 33px 94px rgba(0,0,0,0.09);
}

.aplicatify-message{
  display:flex;
  -webkit-box-align:start;
  align-items:flex-start;
}

.modal-logo{
  flex:0 0 auto;
  width:80px;
  height:80px;
  margin-right:24px;
  border-radius:4px;
}

.modal-text{
  flex:1 1 0px;
}
.modal-title{
  word-wrap:break-word;
  font-size:20px;
  font-weight:600;
  line-height:1.2em;
  text-align:left;
  color:#43464b;
}

.modal-body{
  color:#788;
  text-align:left;
  padding: 0
}

.modal-line{
  border:none;
  width:30%;
  margin:16px 0;
}
.aling-bottom{
  display:flex;
  margin-top:24px;
}

.aplicatify-btn {
  font-family:"Catamaran", "Helvetica Neue", sans-serif;
  flex:1 1 0px;
  display:block;
  background-color:#ddd;
  border:0;
  border-radius:4px;
  color:#484848;
  height:36px;
  font-size:15px;
  font-weight:600;
  line-height:1em;
  margin-right:16px;
  text-align:center;
  text-decoration:none;
}

.accept{
  color:white;
  margin-right:0;
}

.branding-container{
  margin-top:18px;
}

.branding{
  color:#43464b;
  font-size:0.7em;
  font-weight:normal;
  min-width:182px;
  text-align:left;
  line-height:1.3em;
  letter-spacing:0.05em;
}

.brand-link{
  font-weight:600;
}

.brand-link a{
  font-variant:normal;
  text-decoration:none;
}
</style>

<div class="aplicatify-modal" id="modal_<%=optin.kind%>">
  <div class="aplicatify-message">
    <div class="modal-logo">
      <% cache @current_shop.manifest do %>
        <%if @current_shop.manifest.icon.attached? %>
          <%= image_tag @current_shop.manifest.icon.variant(resize: "80x80").processed.service_url.sub(/\?.*/, ''), id: "logo-preview", class: "modal-logo" if Rails.env.production? %>
          <%= image_tag @current_shop.manifest.icon.variant(resize: "80x80"), id: "logo-preview", class: "modal-logo" unless Rails.env.production? %>
        <% end %>
      <% end %>
    </div>
    <div class="modal-text">
      <div class="modal-title" id="modal_optin_title">
        <%=optin.title%>
      </div>
      <hr class="modal-line" style="background: #<%= optin.background_color %>; border-bottom:1px solid #<%= optin.background_color %>;">
      <div class="modal-body" id="modal_optin_body">
        <%=optin.body%>
      </div>
    </div>
  </div>
  <div class="aling-bottom">
    <button id="modal_optin_decline_button" class="aplicatify-btn close_button" onClick="closePopup('<%=optin.kind%>')"><%=optin.decline_button%></button>
    <button id="modal_optin_accept_button"  style="background: #<%= optin.background_color %>;" class="aplicatify-btn accept" onClick="showPrompt('<%=optin.kind%>')"><%=optin.accept_button%></button>
  </div>
  <% if false %>
    <div class="branding-container">
      <div class="branding">Feito por 
        <strong class="brand-link">
          <a id="brand-link" href="https://www.aplicatify.com" target="_blank"  style="color: #<%= optin.background_color %>;">aplicatify</a>
        </strong>
      </div>
  <% end %>
  </div>
</div>